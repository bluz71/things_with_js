<div class="row" data-behavior="thing-form">
  <div class="col-md-6">
    <%= form_for(@thing, remote: true) do |f| %>
      <% if @thing.errors.any? %>
        <div class="alert alert-danger">
          <ul>
          <% @thing.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="alert alert-danger" data-behavior="thing-name-error" style="display: none"></div>
      <div class="field form-group">
        <%= f.label :name %><br>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="field form-group">
        <%= f.label :count %><br>
        <%= f.number_field :count, class: "form-control" %>
      </div>
      <div class="actions">
        <%= f.submit "Submit", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
