<p id="notice"><%= notice %></p>

<h1>Listing Things</h1>

<div class="row">
  <div class="col-md-6">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Count</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @things.each do |thing| %>
          <tr>
            <td><%= thing.name %></td>
            <td><%= thing.count %></td>
            <td><%= link_to 'Show', thing, class: "btn btn-info btn-sm" %></td>
            <td><%= link_to 'Edit', edit_thing_path(thing), class: "btn btn-success btn-sm" %></td>
            <td><%= link_to 'Destroy', thing, class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <%= link_to 'New Thing', new_thing_path, class: "btn btn-default btn-lg" %>
</div>
