<h1>List of Things</h1>

<div class="row">
  <div class="col-md-6">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Count</th>
          <th>Style</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody data-behavior="things-table">
        <%= render @things %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <%= link_to 'New Thing', new_thing_path, remote: true, class: "btn btn-default btn-lg", data: {behavior: "thing-new"} %>
  <div data-behavior="thing-form-location"></div>
  <%= button_tag "Cancel", id: "thing-new-cancel", class: "btn btn-warning btn-xs", data: {behavior: "thing-new-cancel"} %>
</div>
